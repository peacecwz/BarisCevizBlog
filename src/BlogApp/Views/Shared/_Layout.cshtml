        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-96615510-1', 'auto');
        ga('send', 'pageview');

    </script>
    <!-- End Google Tag Manager -->
    @RenderSection("Styles", required: false)
</head>
<body id="page-top" class="index">

    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" asp-action="Index">Baris Ceviz</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a asp-action="Index" asp-controller="Home"></a>
                    </li>
                    <li class="page-scroll">
                        <a asp-action="Posts">Posts</a>
                    </li>
                    <li class="page-scroll">
                        <a asp-action="Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <!-- Footer -->
    <footer class="text-center">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4">
                        <h3>Who Am I?</h3>
                        <p>
                            I'm Music Lover and Software Developer
                        </p>
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>Find on Social Media</h3>
                        @Html.Partial("Partials/SocialBox")
                    </div>
                    <div class="footer-col col-md-4">

                    </div>
                </div>
            </div>
            <div class="footer-below">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            Copyright &copy; Baris Ceviz 2017
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <environment names="Staging,Production,Development">
        <script src="~/Blog/vendor/bootstrap/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
        <script src="~/Blog/js/jqBootstrapValidation.js"></script>
        <script src="//cdn.jsdelivr.net/github-cards/latest/widget.js"></script>
        <script src="~/Blog/js/freelancer.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>
