@model BlogApp.Areas.Admin.Models.AuthorModel
@{
    bool IsError = false;
    bool IsMessage = false;
    string Message = "", Error = "";
    ViewBag.Title = "Yazar Güncelle";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Yazar Güncelle</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Yeni Yazar Ekle
            </div>
            <div class="panel-body">
                @if (IsError)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @Error
                    </div>
                }
                else if (IsMessage)
                {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @Message
                    </div>
                }
                <div class="row">
                    @using (Html.BeginForm("Edit", "Authors", new { area = "Admin" }, FormMethod.Post, true, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.NameSurname)
                                @Html.TextBoxFor(model => model.NameSurname, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.NameSurname) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Title)
                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Title) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Username)
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Username) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Password) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ConfirmPassword)
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.ConfirmPassword) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Email) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ProfileImage)
                                <input name="ProfileImage" id="ProfileImage" type="file">
                            </div>
                            <button type="submit" class="btn btn-success">Yazarı Güncelle</button>
                            <button type="reset" class="btn btn-danger">İptal</button>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Facebook)
                                @Html.TextBoxFor(model => model.Facebook, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Facebook) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Twitter)
                                @Html.TextBoxFor(model => model.Twitter, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Twitter) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Github)
                                @Html.TextBoxFor(model => model.Github, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Github) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.LinkedIn)
                                @Html.TextBoxFor(model => model.LinkedIn, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.LinkedIn) })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.WebSite)
                                @Html.TextBoxFor(model => model.WebSite, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.WebSite) })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>